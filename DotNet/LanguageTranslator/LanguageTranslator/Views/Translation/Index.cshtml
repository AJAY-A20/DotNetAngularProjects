@* Views/Translation/Index.cshtml *@

@{
    ViewBag.Title = "Language Translator";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f4f8; /* Light background */
            color: #333;
            margin: 0;
            padding: 20px;
            display: flex;
            flex-direction: column;
            min-height: 100vh; /* Full height for body */
        }

        .container {
            max-width: 400px;
            margin: 0 auto;
            background: #ffffff; /* White background for the container */
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
        }

        h2 {
            text-align: center;
            color: #333; /* Dark title */
        }

        label {
            margin-top: 10px;
            display: block;
            font-weight: bold;
            color: #555; /* Darker gray for labels */
        }

        input, select, button {
            width: 100%;
            padding: 10px;
            margin: 5px 0;
            border: 2px solid #007BFF; /* Blue border for inputs */
            border-radius: 5px;
            font-size: 16px; /* Increased font size for better readability */
            transition: border-color 0.3s;
        }

            input:focus, select:focus {
                border-color: #0056b3; /* Darker blue on focus */
                outline: none; /* Remove outline */
            }

        button {
            background-color: #007BFF; /* Blue button */
            color: white;
            border: none;
            cursor: pointer;
            font-weight: bold; /* Bold text for the button */
            transition: background-color 0.3s;
        }

            button:hover {
                background-color: #0056b3; /* Darker blue on hover */
            }

        .result {
            margin-top: 20px;
            padding: 10px;
            background: #e8f5e9; /* Light green background for result */
            border-left: 4px solid #28a745; /* Green left border for result */
            border-radius: 5px; /* Rounded corners for result box */
            color: #FF5733; /* Vibrant orange color for the translated word */
        }

            .result h3 {
                color: #333; /* Dark color for the result header */
            }

        footer {
            text-align: center;
            margin-top: auto; /* Push footer to the bottom */
            padding: 10px 0;
            background-color: #007BFF; /* Blue background for footer */
            color: white; /* White text for footer */
        }

            footer p {
                margin: 0; /* Remove default margin */
            }
    </style>
</head>
<body>

    <div class="container">
        <h2>Translate a Word</h2>

        <form method="post" action="/Translation/Translate">
            <label for="word">Word:</label>
            <input type="text" id="word" name="word" required />

            <label for="language">Select Language:</label>
            <select id="language" name="language" required>
                <option value="fr">French</option>
                <option value="es">Spanish</option>
                <option value="de">German</option>
            </select>

            <button type="submit">Translate</button>
        </form>

        @if (ViewBag.TranslatedWord != null)
        {
            <div class="result">
                <h3>Translated Word:</h3>
                <p>@ViewBag.TranslatedWord</p>
            </div>
        }
    </div>

    <footer>
        <p>&copy; 2024 Your Company Name. All rights reserved.</p>
    </footer>

</body>
</html>
